<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
            android:id="@+id/expand_One_Rank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1등"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            ></TextView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="총 당첨금액"
                android:textSize="13dp"
                android:layout_weight="0.4"/>

            <TextView
                android:id="@+id/expand_One_TotalMoney"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="1,000,000원"
                android:textSize="15dp"
                android:paddingLeft="30dp"
                android:gravity="center_vertical"
                android:layout_weight="0.6"/>

        </LinearLayout>
    </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.2dp"
            android:background="#D3D3D3"
            ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/expand_One_People"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="당첨자수 "
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:layout_weight="0.3"
            ></TextView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.7"
                android:orientation="vertical"

                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="개별 당첨금액"
                    android:textSize="13dp"
                    android:layout_weight="0.4"/>
                <TextView
                    android:id="@+id/expand_One_PersonalMoney"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="100,000원"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:layout_weight="0.6"/>
            </LinearLayout>
    </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.2dp"
            android:background="#D3D3D3"
            ></View>
    <TextView
        android:id="@+id/expand_One_Norm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="45dp"
        android:text="test"
        android:textSize="15dp"
        android:layout_marginTop="2dp"
        ></TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="5dp"></View>
</LinearLayout>
