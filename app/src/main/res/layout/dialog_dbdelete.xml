<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_redius"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:text="기록 삭제"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/dialog_dbdelete_turn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.7"
            android:layout_gravity=""
            android:text="880회차"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:weightSum="6">

            <ImageView
                android:id="@+id/dialog_delete_num_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/zero1"/>
            <ImageView
                android:id="@+id/dialog_delete_num_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/zero1"/>
            <ImageView
                android:id="@+id/dialog_delete_num_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/zero1"/>
            <ImageView
                android:id="@+id/dialog_delete_num_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/zero1"/>
            <ImageView
                android:id="@+id/dialog_delete_num_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/zero1"/>
            <ImageView
                android:id="@+id/dialog_delete_num_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/zero1"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dialogLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_dbdelete_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="취소"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/dlTextColor"
            android:background="@color/transparent"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dialogLine" />

        <Button
            android:id="@+id/dialog_dbdelete_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="삭제"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/dlTextColor"
            android:background="@color/transparent"
            />
    </LinearLayout>


</LinearLayout>
