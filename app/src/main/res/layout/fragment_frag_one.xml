<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FragMent_One.FragOne"
    android:orientation="vertical"
    android:weightSum="5">

<!--    android:layout_width="225dp"-->
    <ImageView
        android:id="@+id/iv_pack"
        android:layout_width="225dp"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:src="@drawable/pack1"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        ></ImageView>

    <!--    android:layout_height="120dp"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/frag1_num1"
            android:src="@drawable/num_null"
            android:layout_weight="1"
            ></ImageView>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/frag1_num2"
            android:src="@drawable/num_null"
            android:layout_weight="1"
            ></ImageView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/frag1_num3"
            android:src="@drawable/num_null"
            android:layout_weight="1"
            ></ImageView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/frag1_num4"
            android:src="@drawable/num_null"
            android:layout_weight="1"
            ></ImageView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/frag1_num5"
            android:src="@drawable/num_null"
            android:layout_weight="1"
            ></ImageView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/frag1_num6"
            android:src="@drawable/num_null"
            android:layout_weight="1"
            ></ImageView>
    </LinearLayout>

<!--    android:layout_height="wrap_content"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:paddingRight="30dp">

        <LinearLayout
           android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="right">

             <Button
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:id="@+id/bt_store"
                 android:background="@drawable/ic_add_circle_black_24dp"
                 android:clickable="true"
                 ></Button>

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/bt_random"
                android:background="@drawable/ic_touch_24dp"
                android:clickable="true"
            ></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:gravity="right">
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="저  장"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                ></TextView>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="추  첨"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:singleLine="true"
                ></TextView>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>