<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/noti_expand_turn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="837회차 당첨번호"
        android:textStyle="bold"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/noti_expand_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/one1"
            ></ImageView>
        <ImageView
            android:id="@+id/noti_expand_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/one1"
            ></ImageView>

        <ImageView
            android:id="@+id/noti_expand_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/one1"
            ></ImageView>
        <ImageView
            android:id="@+id/noti_expand_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/one1"
            ></ImageView>
        <ImageView
            android:id="@+id/noti_expand_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/one1"
            ></ImageView>
        <ImageView
            android:id="@+id/noti_expand_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/one1"
            ></ImageView>
        <ImageView
            android:id="@+id/noti_expand_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/one1"
            ></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/noti_expand_score"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="당첨 결과"
            android:textSize="16dp"
            ></TextView>
        <TextView
            android:id="@+id/noti_expand_money"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:text="당첨금액"
            android:textSize="15dp"
            ></TextView>
    </LinearLayout>

</LinearLayout>
